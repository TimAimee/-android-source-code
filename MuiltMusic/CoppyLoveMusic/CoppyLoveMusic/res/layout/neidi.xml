<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/style_brilliant_starlight" />

    <TextView
        android:id="@+id/textneidi"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/screen_audio_player_button_bg"
        android:gravity="center_vertical|center_horizontal"
        android:text="内地歌曲"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fanhui"
        android:onClick="fanhui" />

  

    <ListView
        android:id="@+id/neidilist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:layout_below="@id/textneidi" >
    </ListView>
      

         
    

</RelativeLayout>