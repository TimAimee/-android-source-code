<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <ImageView
        android:id="@+id/home_photo_item_avatar"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_margin="8dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/news_item_background"
        android:orientation="vertical"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="8dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/home_photo_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff397cbf"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingRight="4dip"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_photo_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaaaaaa"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/home_photo_item_titie"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="14sp" 
            android:paddingTop="4dip"
            android:paddingBottom="4dip"
            android:paddingRight="8dip"/>

        <ImageView
            android:id="@+id/home_photo_item_photo"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:scaleType="centerCrop"
            android:layout_marginBottom="4dip"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fffafafa" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingTop="8dip" >

            <TextView
                android:id="@+id/home_photo_item_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="#fff0f0f0" />

            <TextView
                android:id="@+id/home_photo_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/news_commentlike_comment"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="#fff0f0f0" />

            <TextView
                android:id="@+id/home_photo_item_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/news_commentlike_like"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>